# Environment
NODE_ENV=development

# Server Configuration
PORT=3000

# Database Configuration
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=
DB_DATABASE=togetherly_db

# API Security (optional - leave empty to disable API key authentication)
API_KEY=

# JWT Configuration - IMPORTANT: Generate strong secrets for production!
# You can generate secure secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your-super-secret-access-key-at-least-32-characters-long-please-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-key-at-least-32-characters-long-please-change-this
JWT_VERIFICATION_SECRET=your-super-secret-verification-key-at-least-32-characters-long-please-change-this
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_VERIFICATION_EXPIRY=24h

# Hash Configuration
BCRYPT_SALT_ROUNDS=12

# Email Configuration
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=
MAIL_PASS=
MAIL_FROM=noreply@togetherly.app

# App Configuration
APP_URL=http://localhost:3000
